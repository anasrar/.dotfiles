#
# wm independent hotkeys
#

# terminal emulator
{_,shift +}super + Return
	 {alacritty, bspc rule -a \* -o state=floating center=on rectangle=1206x788+0+0 && alacritty}

# terminal emulator
{_,shift +}Henkan_Mode
	 {alacritty, bspc rule -a \* -o state=floating center=on rectangle=1206x788+0+0 && alacritty}

super + Muhenkan
	sh -c "$HOME/.config/sxhkd/scripts/toggle-dropdown-terminal"

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd; notify-send -i "$HOME/.local/share/icons/Grade-orange-dark/symbolic/status/my-caffeine-on-symbolic.svg" "sxhkd" "Reload Config"

# sidebar
super + @space
	sh -c "$HOME/.config/sxhkd/scripts/toggle-sidebar"

# program launcher
super + a
	rofi -show drun

# file manager
super + e
	thunar

# screen shot desktop
Print
	maim /dev/stdout | xclip -selection clipboard -t image/png ; notify-send -i "$HOME/.local/share/icons/Grade-orange-dark/symbolic/places/folder-pictures-symbolic.svg" "Screenshot" " Save On Clipboard"
# screen shot selection
shift + Print
	maim -s | xclip -selection clipboard -t image/png ; notify-send -i "$HOME/.local/share/icons/Grade-orange-dark/symbolic/places/folder-pictures-symbolic.svg" "Screenshot" " Save On Clipboard"
# screen shot window
alt + Print
	maim -i $(xdotool getactivewindow) | xclip -selection clipboard -t image/png ; notify-send -i "$HOME/.local/share/icons/Grade-orange-dark/symbolic/places/folder-pictures-symbolic.svg" "Screenshot" " Save On Clipboard"


#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window
super + g
	bspc node -s biggest.window

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous window in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# send node to prev / next desktop
super + shift + bracket{left,right}
	bspc node -d {prev,next} -f

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window by 20 pixel
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# move a floating window by 1 pixel
super + shift + {Left,Down,Up,Right}
	bspc node -v {-1 0,0 1,0 -1,1 0}

# focus last window on current desktop
alt + {_,shift +}Tab
	bspc node -f last.local

#
# media hotkeys
#

# toggle mute volume
XF86AudioMute
	pulsemixer --toggle-mute

# increases volume
XF86AudioLowerVolume
	pulsemixer --change-volume -5 --max-volume 100

# increases volume
XF86AudioRaiseVolume
	pulsemixer --change-volume +5 --max-volume 100

# toggle mute mic
XF86AudioMicMute
	sh -c "$HOME/.config/sxhkd/scripts/toggle-mute-mic"

# brightness increases
XF86MonBrightnessUp
	sate dispatch brightness increases

# brightness decreases
XF86MonBrightnessDown
	sate dispatch brightness decreases
